{
  "name": "@repo/prisma",
  "version": "0.0.0",
  "private": true,
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    },
    "./*": {
      "import": "./dist/*.js",
      "require": "./dist/*.js"
    }
  },
  "prisma": {
    "seed": "ts-node --compiler-options {\"module\":\"CommonJS\"} src/seed.ts"
  },
  "scripts": {
    "test": "jest",
    "build": "tsc -b -v",
    "prisma-migrate": "node prisma/_loadEnv.js && prisma migrate dev --name init",
    "prisma-seed": "node prisma/_loadEnv.js && prisma db seed",
    "prisma-generate": "node prisma/_loadEnv.js && prisma generate --no-engine"
  },
  "dependencies": {
    "@prisma/client": "^6.6.0",
    "@prisma/extension-accelerate": "^1.3.0"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@repo/config": "workspace:^",
    "@repo/env": "workspace:^",
    "@types/node": "^22.14.1",
    "jest": "^29.7.0",
    "prisma": "^6.6.0",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "typescript": "5.8.3"
  }
}
